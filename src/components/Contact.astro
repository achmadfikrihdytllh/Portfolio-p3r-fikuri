<section id="contact" class="py-24 relative overflow-hidden">
    
    <div class="absolute inset-0 bg-gradient-to-t from-cyan-900/20 to-transparent pointer-events-none"></div>

    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
        
        <h2 class="text-4xl md:text-5xl font-black italic uppercase tracking-tighter text-white mb-2">
            Social <span class="text-cyan-400">Links</span>
        </h2>
        <p class="text-cyan-200 font-mono tracking-widest text-sm mb-16">
            // ESTABLISH NEW BONDS
        </p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            
            {socialLinks.map((social) => (
                <a href={social.link} target="_blank" class={`group relative h-80 transition-all duration-300 transform hover:-translate-y-4`}>
                    
                    <div class="absolute top-0 left-0 z-30 pointer-events-none group-hover:scale-110 transition-transform duration-500">
                        <div class="absolute inset-0 bg-gradient-to-br from-cyan-600 to-blue-900 -translate-x-3 -translate-y-3 -skew-x-12 w-12 h-12 md:w-14 md:h-14 shadow-[4px_4px_15px_rgba(0,0,0,0.5)] border-r-2 border-white/30"></div>
                        <img 
                            src={social.arcanaIcon} 
                            alt={`${social.arcana} Icon`} 
                            class="relative z-10 w-8 h-8 md:w-10 md:h-10 m-1 md:m-2 object-contain drop-shadow-[0_0_8px_rgba(255,255,255,0.6)]"
                        />
                    </div>

                    <div class={`absolute inset-0 border-2 border-gray-600 bg-gray-900/80 -skew-x-3 transition-all duration-300 ${social.color} ${social.bg} group-hover:shadow-[0_0_30px_rgba(0,240,255,0.3)]`}></div>
                    
                    <div class="relative z-10 h-full flex flex-col items-center justify-between p-6 -skew-x-3">
                        
                        <div class="text-xs font-serif text-gray-400 uppercase tracking-[0.2em] border-b border-gray-700 pb-2 w-full">
                            {social.arcana}
                        </div>

                        <div class="text-6xl filter grayscale group-hover:grayscale-0 transition-all duration-500 scale-100 group-hover:scale-110">
                            {social.icon}
                        </div>

                        <div class="w-full">
                            <h3 class="text-xl font-black italic uppercase text-white group-hover:text-cyan-300">
                                {social.name}
                            </h3>
                            <p class="text-xs text-gray-400 font-mono mt-1">
                                {social.role} Link
                            </p>
                            <div class="mt-4 w-full h-1 bg-gray-700 overflow-hidden">
                                <div class="h-full bg-cyan-400 w-0 group-hover:w-full transition-all duration-700 ease-out"></div>
                            </div>
                        </div>

                    </div>
                </a>
            ))}

        </div>

        <div class="mt-20 p-6 border-2 border-dashed border-gray-700 inline-block bg-black/50 rotate-1 hover:rotate-0 transition-transform duration-300">
            <p class="text-gray-300 text-sm italic">
                "I am Thou... and Thou art I..." <br>
                <span class="text-cyan-400 font-bold not-italic">Let's build something incredible together.</span>
            </p>
        </div>

    </div>
</section>