---
// Data Skills (Bisa disesuaikan)
const skills = [
  { name: "Laravel", level: "RANK 8", width: "80%" },
  { name: "AdonisJS", level: "RANK 9", width: "90%" },
  { name: "PostgreSQL", level: "RANK 8", width: "80%" },
  { name: "REST API", level: "RANK 9", width: "90%" },
  { name: "CodeIgniter", level: "RANK 9", width: "90%" },
  { name: "Git", level: "RANK 7", width: "70%" },
];
---

<section id="skills" class="py-24 relative overflow-hidden">
    
    <div class="absolute left-[-40px] md:left-[-50px] top-1/2 -translate-y-1/2 w-[300px] md:w-[400px] pointer-events-none opacity-20 lg:opacity-60 transition-opacity duration-500 z-0">
        <img src="/orpheus.png" alt="Persona" class="w-full h-full object-contain scale-x-[-1] drop-shadow-[0_0_20px_rgba(45,226,230,0.3)]" />
    </div>

    <div class="container mx-auto px-4 relative z-10">
        
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-black italic tracking-tighter text-white inline-block relative">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-300 to-blue-500 drop-shadow-[0_0_10px_rgba(45,226,230,0.8)]">
                    COMMAND LIST
                </span>
                <div class="absolute -left-10 top-1/2 w-8 h-1 bg-cyan-400"></div>
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8 max-w-5xl mx-auto">
            {skills.map((skill) => (
                <div class="relative group">
                    <div class="bg-[#001e3c]/80 border-l-4 border-cyan-400 transform -skew-x-12 p-4 relative overflow-hidden hover:bg-[#002a52] transition-colors duration-300">
                        
                        <div class="flex justify-between items-end mb-2 skew-x-12 px-2">
                            <span class="font-bold text-xl tracking-widest text-white">{skill.name}</span>
                            <div class="flex flex-col items-end">
                                <span class="text-[10px] text-cyan-300">LVL</span>
                                <span class="font-bold text-cyan-400">{skill.level}</span>
                            </div>
                        </div>

                        <div class="h-3 w-full bg-black/50 skew-x-12 relative border border-white/10">
                            <div class="h-full bg-gradient-to-r from-cyan-500 to-blue-600 shadow-[0_0_10px_rgba(45,226,230,0.5)] transition-all duration-1000 ease-out" style={`width: ${skill.width}`}></div>
                        </div>
                        
                    </div>
                </div>
            ))}
        </div>

    </div>
</section>