---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Experience Journey | Memories of You" hideDefaultMusic={true}>
    <main class="min-h-screen bg-[#000510] text-white overflow-hidden relative">
        <div id="sakura-container" class="fixed inset-0 pointer-events-none z-20"></div>

        <div class="absolute inset-0 bg-gradient-to-br from-cyan-950/20 via-black to-blue-900/20 z-0"></div>

        <div class="fixed bottom-10 right-10 z-50 group">
            <div class="relative bg-white text-black px-6 py-4 -skew-x-12 border-l-8 border-cyan-500 shadow-[8px_8px_0_rgba(0,240,255,0.3)] flex items-center gap-4">
                <div class="skew-x-12 flex items-center gap-4">
                    <div class="animate-pulse">
                        <p class="text-[10px] font-black uppercase tracking-tighter text-cyan-600">BGM Active</p>
                        <p class="text-sm font-black italic uppercase">Memories of You</p>
                    </div>
                    <button id="play-btn" class="w-10 h-10 bg-black text-white flex items-center justify-center hover:bg-cyan-500 transition-colors">
                        <svg id="play-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                    </button>
                </div>
            </div>
            <audio id="bg-music" loop preload="auto"><source src="/memories.mp3" type="audio/mpeg"></audio>
        </div>

        <div class="container mx-auto px-6 pt-24 pb-20 relative z-10">
            <div class="mb-20">
                <h1 class="text-6xl md:text-8xl font-black italic uppercase -skew-x-12 mb-2">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-white">Experience</span>
                </h1>
                <div class="bg-white text-black inline-block px-8 py-2 -skew-x-12 border-r-8 border-cyan-500">
                    <p class="text-2xl font-black uppercase tracking-widest skew-x-12">Journey Records</p>
                </div>
            </div>

            <div class="relative ml-4 md:ml-12 border-l-4 border-cyan-500/30 pl-8 md:pl-16 space-y-24">
                <div class="relative group">
                    <div class="absolute -left-[45px] md:-left-[77px] top-0 w-8 h-8 bg-cyan-500 -skew-x-12 border-2 border-white shadow-[0_0_15px_#00f0ff]"></div>
                    <div class="bg-cyan-900/20 backdrop-blur-md p-8 border-l-4 border-cyan-400 -skew-x-6 hover:translate-x-4 transition-transform duration-500">
                        <div class="skew-x-6 text-left">
                            <p class="text-cyan-400 font-black mb-2 italic">OCT 2026 — APR 2027</p>
                            <h3 class="text-3xl font-black uppercase italic mb-4 text-white">Maganghub Batch 1</h3>
                            <p class="text-gray-300 font-medium italic">"Continuing the backend protocol in the real world."</p>
                        </div>
                    </div>
                </div>

                <div class="relative group">
                    <div class="absolute -left-[45px] md:-left-[77px] top-0 w-8 h-8 bg-white -skew-x-12 border-2 border-cyan-500"></div>
                    <div class="bg-white text-black p-8 -skew-x-6 hover:translate-x-4 transition-transform duration-500 border-r-8 border-cyan-500">
                        <div class="skew-x-6 text-left">
                            <p class="text-cyan-600 font-black mb-2 italic">GRADUATED 2025</p>
                            <h3 class="text-3xl font-black uppercase italic mb-2 leading-none">D3 Teknologi Informasi</h3>
                            <p class="text-sm font-bold uppercase tracking-widest mb-4">Universitas Brawijaya</p>
                            <p class="text-gray-700 font-medium">Focused on Backend infrastructures. Final GPA: 3.69.</p>
                        </div>
                    </div>
                </div>

                <div class="relative group">
                    <div class="absolute -left-[45px] md:-left-[77px] top-0 w-8 h-8 bg-cyan-500 -skew-x-12 border-2 border-white"></div>
                    <div class="bg-cyan-950/40 p-8 border-r-4 border-cyan-400 -skew-x-6 hover:translate-x-4 transition-transform duration-500">
                        <div class="skew-x-6 text-left">
                            <p class="text-cyan-400 font-black mb-2 italic">AUG 2024 — DEC 2024</p>
                            <h3 class="text-3xl font-black uppercase italic mb-4">MSIB Batch 7</h3>
                            <p class="text-gray-300 font-medium">Gaining industrial insights into modern backend development.</p>
                        </div>
                    </div>
                </div>

                <div class="relative group">
                    <div class="absolute -left-[45px] md:-left-[77px] top-0 w-8 h-8 bg-gray-800 -skew-x-12 border-2 border-gray-500"></div>
                    <div class="bg-black/60 p-8 border-l-4 border-gray-500 -skew-x-6 hover:translate-x-4 transition-transform duration-500">
                        <div class="skew-x-6 text-left">
                            <p class="text-gray-500 font-black mb-2 italic">GRADUATED 2022</p>
                            <h3 class="text-3xl font-black uppercase italic mb-2">SMAN 1 Sumenep</h3>
                            <p class="text-gray-400 font-medium italic">Awakening the digital potential.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mx-auto px-6 pb-20 text-center relative z-50">
            <a 
                href="/" 
                data-astro-reload 
                class="inline-block bg-white text-black px-12 py-4 font-black uppercase -skew-x-12 hover:bg-cyan-500 hover:text-white transition-all shadow-[8px_8px_0_rgba(0,240,255,0.4)]"
            >
                <span class="skew-x-12 block">Return to Profile</span>
            </a>
        </div>
    </main>
</MainLayout>

<script>
    const setupTimeline = () => {
        const music = document.getElementById('bg-music') as HTMLAudioElement | null;
        const playBtn = document.getElementById('play-btn');
        const playIcon = document.getElementById('play-icon');

        if (!music || !playIcon) return;

        const togglePlay = async (forcePlay = false) => {
            try {
                if (music.paused || forcePlay) {
                    await music.play();
                    playIcon.innerHTML = '<path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>';
                } else {
                    music.pause();
                    playIcon.innerHTML = '<path d="M8 5v14l11-7z"/>';
                }
            } catch (err) {
                console.log("Autoplay diblokir browser. Menunggu interaksi pertama.");
                const playOnGesture = () => {
                    togglePlay(true);
                    document.removeEventListener('click', playOnGesture);
                };
                document.addEventListener('click', playOnGesture, { once: true });
            }
        };
        setTimeout(() => togglePlay(true), 300);

        playBtn?.addEventListener('click', () => togglePlay());
        const container = document.getElementById('sakura-container');
        if (container) {
            const createSakura = () => {
                const petal = document.createElement('div');
                const size = Math.random() * 7 + 7 + 'px';
                petal.className = 'sakura-petal';
                petal.style.left = Math.random() * 100 + 'vw';
                petal.style.width = size;
                petal.style.height = size;
                petal.style.animationDuration = Math.random() * 3 + 4 + 's';
                petal.style.opacity = (Math.random() * 0.6 + 0.4).toString();
                container.appendChild(petal);
                setTimeout(() => petal.remove(), 7000);
            };
            const interval = setInterval(createSakura, 200);
            document.addEventListener('astro:before-preparation', () => clearInterval(interval), { once: true });
        }
    };
    document.addEventListener('astro:page-load', setupTimeline);
</script>

<style is:global>
    .sakura-petal {
        position: absolute;
        top: -20px;
        background: linear-gradient(to bottom right, #ffd1dc, #ffb7c5);
        border-radius: 100% 0% 100% 0%;
        box-shadow: 0 0 8px rgba(255, 183, 197, 0.4);
        animation: fall linear forwards;
    }
    @keyframes fall {
        0% { transform: translateY(0) rotate(0deg) translateX(0); }
        100% { transform: translateY(110vh) rotate(360deg) translateX(80px); }
    }
</style>